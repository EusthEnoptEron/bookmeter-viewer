{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "./build",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "downlevelIteration": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
   "include": [
        "src/**/*"
    ],
}